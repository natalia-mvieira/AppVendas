<AdicionarVendasPage>
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "AplicativoVendas/icones/bg1.png"
        Label:
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.05
            text: "Selecione o Cliente"
            id: label_selecione_cliente
        ScrollView:
            pos_hint: {'right': 1, 'top': 0.95}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_clientes
                size_hint_x: None
                width: self.minimum_width
                col_default_width: '100dp'
                col_force_default: True
        Label:
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 1, 0.05
            text: "Selecione o Produto"
            id: label_selecione_produto
        ScrollView:
            pos_hint: {'right': 1, 'top': 0.7}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_produtos
                size_hint_x: None #se o banner fosse vertical, onde é y seria x
                width: self.minimum_width #se o banner fosse vertical, onde é height seria widht
                col_default_width: '100dp' # 90 dp é o tamanho do banner. se o banner fosse vertical, onde é row seria column
                col_force_default: True
        Label:
            pos_hint: {"right": 1, "top": 0.5}
            size_hint: 1, 0.05
            bold: True
            text: "Data"
            id: label_data
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.45}
            size_hint: 0.8, 0.1
            LabelButton:
                text: 'kg'
                id: unidades_kg
                on_release: app.selecionar_unidade("unidades_kg")
            LabelButton:
                text: 'unidades'
                id: unidades_unidades
                on_release: app.selecionar_unidade("unidades_unidades")
            LabelButton:
                text: 'litros'
                id: unidades_litros
                on_release: app.selecionar_unidade("unidades_litros")
        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "AplicativoVendas/icones/botao.png" if self.state == "normal" else "AplicativoVendas/icones/botao_apertado.png"
            on_release: app.mudar_tela("homepage")
            text: "Cancelar"
            pos_hint: {"right": 0.45, "top": 0.2}
            size_hint: 0.4, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "AplicativoVendas/icones/botao.png" if self.state == "normal" else "AplicativoVendas/icones/botao_apertado.png"
            text: "Adicionar Venda"
            on_release: app.adicionar_venda()
            pos_hint: {"right": 0.95, "top": 0.2}
            size_hint: 0.4, 0.2
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.355}
            size_hint: 0.8, 0.075
            Label:
                text: 'Preço (R$)'
                id: label_preco
            TextInput:
                id: label_preco
                hint_text: "Digite apenas números"
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.275}
            size_hint: 0.8, 0.075
            Label:
                text: 'Quantidade Total'
                id: quantidade_total
            TextInput:
                id: quantidade
                hint_text: "0"


