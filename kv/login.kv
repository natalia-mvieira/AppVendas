<LoginPage>
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "AplicativoVendas/icones/bg1.png"
        Label:
            text: "CONTROLE DE [color=#00CFDB]VENDAS HASHTAG[/color]"
            bold: True
            markup: True
            pos_hint: {"right": 0.9, "top": 0.9}
            size_hint: 0.8, 0.2
        TextInput:
            id: email_input
            hint_text: "Digite seu e-mail"
            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.8, 0.1
        TextInput:
            id: senha_input
            password: True
            hint_text: "Digite sua senha"
            pos_hint: {"right": 0.9, "top": 0.55}
            size_hint: 0.8, 0.1
        Label:
            id: mensagem_login
            text: "[color=#00CFDB] Faça seu login [/color]"
            bold: True
            markup: True
            pos_hint: {"right": 0.9, "top": 0.4}
            size_hint: 0.8, 0.1
        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "AplicativoVendas/icones/botao.png" if self.state == "normal" else "AplicativoVendas/icones/botao_apertado.png"
            on_release: app.firebase.fazer_login(email_input.text, senha_input.text)
            text: "Login"
            pos_hint: {"right": 0.45, "top": 0.3}
            size_hint: 0.4, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "AplicativoVendas/icones/botao.png" if self.state == "normal" else "AplicativoVendas/icones/botao_apertado.png"
            text: "Criar Conta"
            on_release: app.firebase.criar_conta(email_input.text, senha_input.text) #por isso eu criei o self.firebase = MyFirebase() no main. o 'email_input' e 'senha_input' aqui são os ids dos inputs do usuário
            pos_hint: {"right": 0.95, "top": 0.3}
            size_hint: 0.4, 0.2